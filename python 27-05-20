In [36]:
#condition statements: if,else,elif
a=int(input("enter value a"))
b=int(input("enter the value b"))
if a<b:
    print("a is less than b")
elif a>b:
    print("a is greater than b")
else:
    print("a is equal to b")

enter value a5
enter the value b5
a is equal to b
In [38]:
#find the largest of three numbers
a=int(input("enter value a"))
b=int(input("enter the value b"))
c=int(input("enter value c"))
if (a>b and a>c):
    print("a is greater")
elif(b>a and b>c):
    print("b is greater")
else:
    print("c is greater")

enter value a10
enter the value b90
enter value c60
b is greater
In [40]:
#loops: while,for
#print 1 to n values 
n=int(input("enter n value"))
i=1
while i<=n:
    print(i) #use print(i,end=" ") to print in same line
    i+=1 #same as i=i+1

