#logical operators: and,or,not keywords are used 
#print(help("keywords"))
a=int(input("enter value a"))
b=int(input("enter the value b"))
print(a < b and a > 1)
print(a <b or a > 1)#if both the conitions are true then only o/p is true
print(not a<b)

