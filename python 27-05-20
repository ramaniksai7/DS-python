#Arthimetic operators:+,-,*,/,%,//(floor division),**(exponential)
a = int(input("enter a value"))
b = int(input("enter b value"))
print(a+b)
print(a-b)
print(a*b)
print(a/b)
print(a%b)    #remainder
print(a//b)  #int quotient
print(a**b)   

